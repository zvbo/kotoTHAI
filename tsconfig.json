{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "nativewind/types"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": [
    "_layout.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "context/**/*.ts",
    "context/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "constants/**/*.ts",
    "constants/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "agent-server/**",
    "node_modules/**",
    "scripts/**"
  ]
}
